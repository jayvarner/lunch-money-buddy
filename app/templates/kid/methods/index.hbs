<h5>Payment Methods</h5>
<div class='row content-table'>
  <div class='one-fifth'>
    Default
  </div>
  <div class='two-fifths'>
    Method
  </div>
  <div class='one-fifth'>
    Number
  </div>
  <div class='one-fifth'>
.
  </div>
{{!-- </div> --}}
{{#each model as |method|}}
{{!-- <div class='row'> --}}
{{#unless method.isDeleted}}
  <div class='one-fifth'>
    <input type='radio' name='defaultmethod' checked='{{if (eq kid.default_method method.id) 'checked'}}' value={{method.id}} onchange={{action (mut kid.default_method) method.id}}/>
  </div>
  <div class='two-fifths'>
    {{method.methodtype}}
  </div>
  <div class='one-fifth'>
    **{{method.lastFour}}
  </div>
  <div class='one-fifth'>
    {{#link-to 'kid.methods.edit' method.id}}
    {{mdl-icon icon='mode_edit'}}
    {{/link-to}}
    <a {{action (route-action 'delete' method)}}>
      {{mdl-icon icon='delete'}}
    </a>
  </div>
  {{/unless}}
{{/each}}
</div>
<div class='row'>
  <div class='three-fifths'>
    Auto Replenishment
  </div>
  <div class='one-fifth'>
    {{mdl-switch value=kid.autopay class='push-right' action=(toggle kid.autopay)}}
  </div>
  <div class='one-fifth'>
    {{mdl-icon icon='settings' class='push-right'}}
  </div>
</div>
{{#link-to 'kid.methods.new'}}{{mdl-button isRaised=true text='New Method' isAccent=true}}{{/link-to}}
